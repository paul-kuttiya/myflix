%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  - if current_user
    %ul.col-md-4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue"
      %li= link_to "People"
    .col-md-5.navbar-form
      = render 'shared/search'
    #user_links.pull-right
      %ul
        %li.dropdown
          = link_to "#", id: "dlabel", role: "button", data: {toggle: "dropdown", target: "#"}, class: "dropdown-toggle" do
            = "Welcome, #{first_name(current_user.full_name)}"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", sign_out_path