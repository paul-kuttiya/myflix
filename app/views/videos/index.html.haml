- @categories.each do |cat|
  %article.video_category
    %header
      %h3= link_to "TV #{title(cat.name)}", category_path(cat)
    .videos.row
      - cat.recent_videos.each do |video|
        .video.col-lg-2.col-md-3.col-sm-3
          = link_to video_path(video) do
            %img(src="#{video.small_cover}")