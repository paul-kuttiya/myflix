%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: sessions_path, class: "sign_in" do |f|
        %p.alert.alert-success Use information provided for admin features.
        %header
          %h1 Sign in
          .row
            .col-sm-4
              = f.email_field :email, label: "Email address", placeholder: "admin@email.com"
          .row
            .col-sm-4
              = f.password_field :password, placeholder: "admin"
        = f.form_group do
          = f.submit "Sign in", class: "btn btn-default"
        = link_to "Forgot Password?", forgot_password_path